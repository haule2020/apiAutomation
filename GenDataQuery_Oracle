/* 
Assignement: Generate a dataset with 25 million records, 4 columns in ORACLE 
Notes: DBMS	package must be installed  in Oracle Database
Data generated for each column:
- ID: default unique key generated by system
- DATE_OF_BITH: Get random date from 1945 - 2015 
- NAME: Random String of 20 chars
- SALARY: random number from 3000000 - 100000000
*/

--Step 1: create EMPLOYEE table

CREATE TABLE EMPLOYEE (
    ID varchar2(100) default sys_guid() primary key,
    DATE_OF_BITH date,
    NAME varchar2(300),
    SALARY number(15)
 );

--Step 2: loop 2,5 mil times to insert data
begin
 FOR i IN 1..25000000
 LOOP
   INSERT INTO EMPLOYEE (DATE_OF_BITH, NAME, SALARY)
               VALUES(
                (SELECT TO_DATE(TRUNC(DBMS_RANDOM.VALUE(2429630,2457024)),'J') FROM DUAL),
                (SELECT DBMS_RANDOM.STRING('A', 20) FROM DUAL),
                (SELECT ROUND(DBMS_RANDOM.value(3000000,100000000)) FROM DUAL)
                );
 END LOOP;
 
end;

--Step 3: commit 
commit;

